<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainMyPurchase">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </Space>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/idPieChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="29dp"
            android:layout_height="match_parent">

        </Space>


        <ImageButton
            android:id="@+id/back"
            android:layout_width="64dp"
            android:layout_height="73dp"
            android:background="?android:selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.636"
            app:srcCompat="@mipmap/back2_foreground"
            tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </Space>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="112dp"
            android:layout_height="45dp"
            android:layout_gravity="center"


            android:layout_marginStart="116dp"

            android:letterSpacing="0.07"


            android:textColor="#01431a"
            android:textSize="20sp"


            android:textStyle="normal"

            app:layout_constraintBottom_toTopOf="@+id/idPieChart"
            app:layout_constraintEnd_toStartOf="@+id/money3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.631" />

        <ImageView
            android:id="@+id/money3"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.01999998"
            app:srcCompat="@mipmap/money1" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/idPieChart"
        android:layout_width="306dp"
        android:layout_height="257dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175" />




    <TextView
        android:id="@+id/text_pr"
        android:layout_width="316dp"
        android:layout_height="63dp"
        android:gravity="center_vertical"
        android:letterSpacing="0.07"
        android:textColor="#01431a"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPieChart"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/list"
        android:layout_width="351dp"
        android:layout_height="311dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_pr"
        app:layout_constraintVertical_bias="0.0" />
</androidx.appcompat.widget.LinearLayoutCompat>